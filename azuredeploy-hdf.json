{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clientID": {
      "type": "string",
      "minLength": 2,
      "maxLength": 5,
      "defaultValue": "zu",
      "metadata": {
        "description": "Prefix for the Environment (2-5 characters) related to the Client ID or Name."
      }
    },
    "primaryAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Primary Address prefix."
      }
    },
    "subnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "Subnet Prefix."
      }
    },
    "ambariServerNicIPAddress": {
      "type": "string",
      "defaultValue": "10.0.1.4",
      "metadata": {
        "description": "The Primary IP address of the new Ambari Server being deployed."
      }
    },
    "ambariServerStorageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "Description": "The Type of Redundant Storage used for the Ambari Server being deployed."
      }
    },
    "ambariServerAdminUsername": {
      "type": "string",
      "defaultValue": "zuadmin",
      "metadata": {
        "Description": "The Local Username of the account being created on the Ambari Server."
      }
    },
    "ambariServerAdminPassword": {
      "type": "securestring",
      "defaultValue": "DataMein1@#$",
      "metadata": {
        "Description": "The Local Password of the account being created on the Ambari Server."
      }
    },
    "ambariServerImagePublisher": {
      "type": "string",
      "defaultValue": "OpenLogic",
      "allowedValues": [
        "OpenLogic",
        "Canonical"
      ],
      "metadata": {
        "description": "The Publisher of the Linux Image being used for the Ambari Server."
      }
    },
    "ambariServerImageOffer": {
      "type": "string",
      "defaultValue": "CentOS",
      "allowedValues": [
        "CentOS",
        "UbuntuServer"
      ],
      "metadata": {
        "description": "The Linux Image Offer used for the Ambari Server."
      }
    },
    "ambariServerImageSku": {
      "type": "string",
      "defaultValue": "6.6",
      "allowedValues": [
        "6.5",
        "6.6",
        "14.04.2-LTS",
        "16.04-LTS"
      ],
      "metadata": {
        "description": "The Linux Image SKU used for the Ambari Server."
      }
    },
    "ambariServerImageVersion": {
      "type": "string",
      "defaultValue": "latest",
      "allowedValues": [
        "latest"
      ],
      "metadata": {
        "description": "The Version Number of the fully patched Linux Image being deployed."
      }
    },
    "ambariServerDataDiskSize": {
      "type": "int",
      "defaultValue": 50,
      "metadata": {
        "description": "The Size of the Ambari Server Data Disk in GB."
      }
    },
    "ambariServerVMSize": {
      "type": "string",
      "defaultValue": "Standard_DS2_v2",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2"
      ],
      "metadata": {
        "description": "The Size of the Ambari Server VM being deployed in Azure."
      }
    },
    "indexValue": {
      "type": "int",
      "defaultValue": 0,
      "metadata": {
        "description": "This is required so the multi-VM hdf Server deployment will return the names of the VMs to the Ambari Server Deployment Script."
      }
    },
    "hdfServerInstances": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "The number of hdf Server Instances being deployed."
      }
    },
    "hdfServerStorageAccountType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "The type of the Storage Account(s) being created for the hdf Server Instances."
      }
    },
    "hdfServerAdminUsername": {
      "type": "string",
      "defaultValue": "zuadmin",
      "metadata": {
        "Description": "The Local Username of the account being created on the hdf Server Instance."
      }
    },
    "hdfServerAdminPassword": {
      "type": "securestring",
      "defaultValue": "DataMein1@#$",
      "metadata": {
        "Description": "The Local Password of the account being created on the hdf Server Instance."
      }
    },
    "hdfServerImagePublisher": {
      "type": "string",
      "defaultValue": "OpenLogic",
      "allowedValues": [
        "OpenLogic",
        "Canonical"
      ],
      "metadata": {
        "description": "The Publisher of the Linux Image being used for the hdf Server Instance."
      }
    },
    "hdfServerImageOffer": {
      "type": "string",
      "defaultValue": "CentOS",
      "allowedValues": [
        "CentOS",
        "UbuntuServer"
      ],
      "metadata": {
        "description": "The Linux Image Offer used for the hdf Server Instance."
      }
    },
    "hdfServerImageSku": {
      "type": "string",
      "defaultValue": "6.6",
      "allowedValues": [
        "6.5",
        "6.6",
        "14.04.2-LTS",
        "16.04-LTS"
      ],
      "metadata": {
        "description": "The Linux Image SKU used for the hdf Server Instance."
      }
    },
    "hdfServerImageVersion": {
      "type": "string",
      "defaultValue": "latest",
      "allowedValues": [
        "latest"
      ],
      "metadata": {
        "description": "The Version Number of the fully patched Linux Image being deployed."
      }
    },
    "hdfServerDataDiskSize": {
      "type": "int",
      "defaultValue": 50,
      "metadata": {
        "description": "The Size of the hdf Server Instance Data Disk in GB."
      }
    },
    "hdfServerVMSize": {
      "type": "string",
      "defaultValue": "Standard_DS2_v2",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2"
      ],
      "metadata": {
        "description": "The Size of the hdf Server Instance VM being deployed in Azure."
      }
    },
    "deployAmbariServerScriptURI": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/zuuser/templates/master/deploy-ambari-centos-6.8-hdf.sh",
      "metadata": {
        "description": "The URI of the Ambari Server Deployment Script."
      }
    },
    "deployAmbariServerScriptName": {
      "type": "string",
      "defaultValue": "deploy-ambari-centos-6.8-hdf.sh",
      "metadata": {
        "description": "The Name of the Ambari Server Deployment Script."
      }
    },
    "domainName": {
      "type": "string",
      "defaultValue": "[concat(resourceGroup().location, '.cloudapp.azure.com')]",
      "metadata": {
        "description": "The Name of the Domain to create on the Ambari Server. The name created is based on the Resource Group location of the deployment."
      }
    },
    "deployAmbariVMTemplateURI": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/zuuser/templates/master/deployAmbariVM-hdf.json",
      "metadata": {
        "description": "The location of the deployAmbariVM.json ARM Template File."
      }
    },
    "deployhdfVMTemplateURI": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/zuuser/templates/master/deployHdfVMs.json",
      "metadata": {
        "description": "The location of the deployhdfVMs.json ARM Template File."
      }
    },
    "deployAmbariServerTemplateURI": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/zuuser/templates/master/deployAmbariServer.json",
      "metadata": {
        "description": "The location of the deployAmbariServer.json ARM Template File."
      }
    },
    "apiVersion": {
      "type": "string",
      "defaultValue": "2015-06-15",
      "metadata": {
        "description": "The Azure Resource Manager API Version to use during the Deployment."
      }
    }
  },
  "variables": {
    "deploymentResourceGroupName": "[concat(resourceGroup().name)]",
    "vNetName": "[concat(parameters('clientID'), '-VNet')]",
    "subnetName": "[concat(parameters('clientID'), '-Subnet')]",
    "ambariServerNsgName": "[concat(parameters('clientID'), '-nsg-', substring(uniqueString(resourceGroup().id), 0, 2))]",
    "ambariServerPubIPName": "[concat(parameters('clientID'), '-ambarisrv-', substring(uniqueString(resourceGroup().id), 0, 2))]",
    "ambariServerStorageName": "[concat(parameters('clientID'), 'ambarisrvstr', substring(uniqueString(resourceGroup().id), 0, 4))]",
    "ambariServerName": "[concat(parameters('clientID'), '-ambarisrv-', substring(uniqueString(resourceGroup().id), 0, 2))]",
    "ambariServerOSDiskName": "[concat(variables('ambariServerName'), '-OSDisk')]",
    "ambariServerDataDiskName": "[concat(variables('ambariServerName'), '-DataDisk')]",
    "hdfServerPubIPName": "[concat(parameters('clientID'), '-hdfsrv-', substring(uniqueString(resourceGroup().id), 0, 2))]",
    "hdfServerStorageName": "[concat(parameters('clientID'), 'hdfsrvstr', substring(uniqueString(resourceGroup().id), 0, 4))]",
    "hdfServerName": "[concat(parameters('clientID'), '-hdfsrv-', substring(uniqueString(resourceGroup().id), 0, 2))]",
    "hdfServerOSDiskName": "[concat(variables('hdfServerName'), '-OSDisk')]",
    "hdfServerDataDiskName": "[concat(variables('hdfServerName'), '-DataDisk')]"
  },
  "resources": [
    {
      "name": "deployAmbariVM",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "comments": "This resource will deploy the Ambari Server and its respective resources.",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('deployAmbariVMTemplateURI')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "clientID": {
            "value": "[parameters('clientID')]"
          },
          "primaryAddressPrefix": {
            "value": "[parameters('primaryAddressPrefix')]"
          },
          "subnetPrefix": {
            "value": "[parameters('subnetPrefix')]"
          },
          "ambariServerNicIPAddress": {
            "value": "[parameters('ambariServerNicIPAddress')]"
          },
          "ambariServerStorageType": {
            "value": "[parameters('ambariServerStorageType')]"
          },
          "ambariServerAdminUsername": {
            "value": "[parameters('ambariServerAdminUsername')]"
          },
          "ambariServerAdminPassword": {
            "value": "[parameters('ambariServerAdminPassword')]"
          },
          "ambariServerImagePublisher": {
            "value": "[parameters('ambariServerImagePublisher')]"
          },
          "ambariServerImageOffer": {
            "value": "[parameters('ambariServerImageOffer')]"
          },
          "ambariServerImageSku": {
            "value": "[parameters('ambariServerImageSku')]"
          },
          "ambariServerImageVersion": {
            "value": "[parameters('ambariServerImageVersion')]"
          },
          "ambariServerDataDiskSize": {
            "value": "[parameters('ambariServerDataDiskSize')]"
          },
          "ambariServerVMSize": {
            "value": "[parameters('ambariServerVMSize')]"
          },
          "apiVersion": {
            "value": "[parameters('apiVersion')]"
          },
          "vNetName": {
            "value": "[variables('vNetName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "ambariServerNSGName": {
            "value": "[variables('ambariServerNSGName')]"
          },
          "ambariServerPubIPName": {
            "value": "[variables('ambariServerPubIPName')]"
          },
          "ambariServerStorageName": {
            "value": "[variables('ambariServerStorageName')]"
          },
          "ambariServerName": {
            "value": "[variables('ambariServerName')]"
          },
          "ambariServerOSDiskName": {
            "value": "[variables('ambariServerOSDiskName')]"
          },
          "ambariServerDataDiskName": {
            "value": "[variables('ambariServerDataDiskName')]"
          }
        }
      }
    },
    {
      "name": "deployhdfVM-0",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "comments": "This resource will deploy the First hdf Servers and their respective resources.",
      "dependsOn": [
        "Microsoft.Resources/deployments/deployAmbariVM"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('deployhdfVMTemplateURI')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "clientID": {
            "value": "[parameters('clientID')]"
          },
          "indexValue": {
            "value": "[parameters('indexValue')]"
          },
          "hdfServerStorageAccountType": {
            "value": "[parameters('hdfServerStorageAccountType')]"
          },
          "hdfServerAdminUsername": {
            "value": "[parameters('hdfServerAdminUsername')]"
          },
          "hdfServerAdminPassword": {
            "value": "[parameters('hdfServerAdminPassword')]"
          },
          "hdfServerImagePublisher": {
            "value": "[parameters('hdfServerImagePublisher')]"
          },
          "hdfServerImageOffer": {
            "value": "[parameters('hdfServerImageOffer')]"
          },
          "hdfServerImageSku": {
            "value": "[parameters('hdfServerImageSku')]"
          },
          "hdfServerImageVersion": {
            "value": "[parameters('hdfServerImageVersion')]"
          },
          "hdfServerDataDiskSize": {
            "value": "[parameters('hdfServerDataDiskSize')]"
          },
          "hdfServerVMSize": {
            "value": "[parameters('hdfServerVMSize')]"
          },
          "apiVersion": {
            "value": "[parameters('apiVersion')]"
          },
          "deploymentResourceGroupName": {
            "value": "[variables('deploymentResourceGroupName')]"
          },
          "vNetName": {
            "value": "[variables('vNetName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "hdfServerStorageName": {
            "value": "[variables('hdfServerStorageName')]"
          },
          "hdfServerPubIPName": {
            "value": "[variables('hdfServerPubIPName')]"
          },
          "hdfServerName": {
            "value": "[variables('hdfServerName')]"
          },
          "hdfServerOSDiskName": {
            "value": "[variables('hdfServerOSDiskName')]"
          },
          "hdfServerDataDiskName": {
            "value": "[variables('hdfServerDataDiskName')]"
          }
        }
      }
    },
    {
      "name": "[concat('deployhdfVM-', copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "deployAdditionalhdfVMsLoop",
        "count": "[sub(parameters('hdfServerInstances'), 1)]"
      },
      "apiVersion": "2016-09-01",
      "comments": "This resource will deploy the remaining hdf Servers and their respective resources using the copy function and offsetting by 1.",
      "dependsOn": [
        "Microsoft.Resources/deployments/deployhdfVM-0"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('deployhdfVMTemplateURI')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "clientID": {
            "value": "[parameters('clientID')]"
          },
          "indexValue": {
            "value": "[copyIndex(1)]"
          },
          "hdfServerStorageAccountType": {
            "value": "[parameters('hdfServerStorageAccountType')]"
          },
          "hdfServerAdminUsername": {
            "value": "[parameters('hdfServerAdminUsername')]"
          },
          "hdfServerAdminPassword": {
            "value": "[parameters('hdfServerAdminPassword')]"
          },
          "hdfServerImagePublisher": {
            "value": "[parameters('hdfServerImagePublisher')]"
          },
          "hdfServerImageOffer": {
            "value": "[parameters('hdfServerImageOffer')]"
          },
          "hdfServerImageSku": {
            "value": "[parameters('hdfServerImageSku')]"
          },
          "hdfServerImageVersion": {
            "value": "[parameters('hdfServerImageVersion')]"
          },
          "hdfServerDataDiskSize": {
            "value": "[parameters('hdfServerDataDiskSize')]"
          },
          "hdfServerVMSize": {
            "value": "[parameters('hdfServerVMSize')]"
          },
          "apiVersion": {
            "value": "[parameters('apiVersion')]"
          },
          "deploymentResourceGroupName": {
            "value": "[variables('deploymentResourceGroupName')]"
          },
          "vNetName": {
            "value": "[variables('vNetName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "hdfServerPubIPName": {
            "value": "[variables('hdfServerPubIPName')]"
          },
          "hdfServerStorageName": {
            "value": "[variables('hdfServerStorageName')]"
          },
          "hdfServerName": {
            "value": "[variables('hdfServerName')]"
          },
          "hdfServerOSDiskName": {
            "value": "[variables('hdfServerOSDiskName')]"
          },
          "hdfServerDataDiskName": {
            "value": "[variables('hdfServerDataDiskName')]"
          },
          "hdfServerVMs": {
            "value": "[reference(concat('deployhdfVM-', copyIndex())).outputs.result.value]"
          }
        }
      }
    },
    {
      "name": "deployAmbariServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "comments": "This resource will deploy the Ambari Server and DNS on the Ambari VM.",
      "dependsOn": [
        "deployAdditionalhdfVMsLoop"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('deployAmbariServerTemplateURI')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ambariServerName": {
            "value": "[variables('ambariServerName')]"
          },
          "deployAmbariServerScriptURI": {
            "value": "[parameters('deployAmbariServerScriptURI')]"
          },
          "deployAmbariServerScriptName": {
            "value": "[parameters('deployAmbariServerScriptName')]"
          },
          "ambariServerAdminUsername": {
            "value": "[parameters('ambariServerAdminUsername')]"
          },
          "ambariServerAdminPassword": {
            "value": "[parameters('ambariServerAdminPassword')]"
          },
          "hdfServerVMs": {
            "value": "[reference(concat('deployhdfVM-', sub(parameters('hdfServerInstances'), 1))).outputs.result.value]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          }
        }
      }
    }
  ]
}